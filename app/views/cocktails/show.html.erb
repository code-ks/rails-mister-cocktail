<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Back to all cocktails", root_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
        <thead>
        <th>Ingredient</th>
        <th>Dosage</th>
        <th>Action</th>
        </thead>
        <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash destroy_dose"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%#= render new_cocktail_dose_path, cocktail: @cocktail, dose: @dose %>
      <%= link_to('Add ingredients', new_cocktail_dose_path(@cocktail)) %>
    </div>
  </div>
</div>
